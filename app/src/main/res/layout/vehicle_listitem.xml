<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_margin="@dimen/general_app_margin_half"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    android:layout_height="100dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="8dp"
        android:id="@+id/listItemLL"
        android:background="@drawable/list_item_bg"
        android:layout_height="match_parent">

        <!--VEHICLE THUMB IMAGE-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="48dp"
                android:id="@+id/vehicleTypeIV"
                android:src="@drawable/ic_car_pool"
                android:layout_height="48dp" />

        </LinearLayout>


        <!--VEHICLE INFORMATION-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:padding="@dimen/general_app_margin_half"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="Location:"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/vehicleLocationTV"
                android:textStyle="normal"
                android:maxLines="1"
                android:textSize="11sp"
                android:text="@string/fecthing_address_of_vehicle"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:text="Vehicle Type:"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/general_app_margin_half"
                android:textSize="11sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/vehicleTypeTV"
                android:textStyle="normal"
                android:textSize="11sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>